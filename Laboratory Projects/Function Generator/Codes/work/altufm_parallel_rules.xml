<?xml version="1.0"?>
<ROOT>
  <!-- macros -->
  <MACROS>
    <MACRO NAME="oscena_used" DEFINITION="is_used(oscena)" />
    <MACRO NAME="osc_used" DEFINITION="is_used(osc)" />
    <MACRO NAME="write_used" DEFINITION="ACCESS_MODE == READ_WRITE" />
  </MACROS>
  
  <PARAMETERS>
    <PARAMETER NAME="ACCESS_MODE" TYPE="STRING" DEFAULT_VALUE_INDEX="0">
      <FORCE_VALUE TO="READ_WRITE|READ_ONLY" />
    </PARAMETER>
    <PARAMETER NAME="ERASE_TIME" TYPE="INTEGER" DEFAULT_VALUE="500000000">
      <FORCE_RANGE MIN="1600000" MAX="999999999" />
    </PARAMETER>
    <PARAMETER NAME="OSC_FREQUENCY" TYPE="INTEGER" DEFAULT_VALUE_INDEX="0">
      <FORCE_RANGE TO="180000|300000" />
    </PARAMETER>
    <PARAMETER NAME="PROGRAM_TIME" TYPE="INTEGER" DEFAULT_VALUE="1600000">
      <FORCE_RANGE MIN="1600000" MAX="100000000" />
    </PARAMETER>
    <PARAMETER NAME="WIDTH_ADDRESS" TYPE="INTEGER" DEFAULT_VALUE="9">
      <FORCE_RANGE MIN="3" MAX="9" />
    </PARAMETER>
    <PARAMETER NAME="WIDTH_DATA" TYPE="INTEGER" DEFAULT_VALUE="16">
      <FORCE_RANGE MIN="3" MAX="16" />
    </PARAMETER>
  </PARAMETERS>
  <PORTS>
    <PORT NAME="addr" TYPE="INPUT" WIDTH="WIDTH_ADDRESS" USAGE="USED" />
    <PORT NAME="data_valid" TYPE="OUTPUT" USAGE="USED" />
    <PORT NAME="datain" TYPE="INPUT" WIDTH="WIDTH_DATA" DEFAULT_VALUE="0" USAGE="UNUSED">
      <STATE V="USED" WHEN="write_used" />
    </PORT>
    <PORT NAME="dataout" TYPE="OUTPUT" WIDTH="WIDTH_DATA" USAGE="USED" />
    <PORT NAME="nbusy" TYPE="OUTPUT" USAGE="USED" />
    <PORT NAME="nerase" TYPE="INPUT" DEFAULT_VALUE="1" USAGE="UNUSED">
      <STATE V="USED" WHEN="write_used" />
    </PORT>
    <PORT NAME="nread" TYPE="INPUT" USAGE="USED" />
    <PORT NAME="nwrite" TYPE="INPUT" DEFAULT_VALUE="1" USAGE="UNUSED">
      <STATE V="USED" WHEN="write_used" />
    </PORT>
    <PORT NAME="osc" TYPE="OUTPUT" USAGE="UNUSED">
      <STATE V="USED" WHEN="osc_used" />
    </PORT>
    <PORT NAME="oscena" TYPE="INPUT" USAGE="UNUSED" DEFAULT_VALUE="1">
      <STATE V="USED" WHEN="oscena_used" />
    </PORT>
  </PORTS>
</ROOT>
