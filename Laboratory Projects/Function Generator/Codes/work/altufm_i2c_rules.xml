<?xml version="1.0"?>
<ROOT>
  <!-- macros -->
  <MACROS>
    <MACRO NAME="a0_used" DEFINITION="MEMORY_SIZE==1K || MEMORY_SIZE==2K" />
    <MACRO NAME="a1_used" DEFINITION="MEMORY_SIZE==4K" />
    <MACRO NAME="read_only_used" DEFINITION="ACCESS_MODE == READ_ONLY" />
    <MACRO NAME="wp_used" DEFINITION="is_used(wp)" />
    <MACRO NAME="oscena_used" DEFINITION="is_used(oscena)" />
    <MACRO NAME="osc_used" DEFINITION="is_used(osc)" />
    <MACRO NAME="page_write" DEFINITION="WRITE_MODE == PAGE" />
    <MACRO NAME="global_reset_used" DEFINITION="is_used(global_reset)" />
    <MACRO NAME="a2_erase_used" DEFINITION="ERASE_METHOD == A2_ERASE" />
    <MACRO NAME="mem_add_used" DEFINITION="ERASE_METHOD == MEM_ADD" />
    <MACRO NAME="device_add_used" DEFINITION="FIXED_DEVICE_ADD != 1010" />
  </MACROS>
  
  <PARAMETERS>
    <PARAMETER NAME="ACCESS_MODE" TYPE="STRING" DEFAULT_VALUE_INDEX="0">
      <FORCE_VALUE TO="READ_WRITE|READ_ONLY" />
    </PARAMETER>
    <PARAMETER NAME="ERASE_METHOD" TYPE="STRING" DEFAULT_VALUE_INDEX="0">
      <FORCE_RANGE TO="MEM_ADD|DEV_ADD_111|A2_ERASE|NO_ERASE" />
    </PARAMETER>
    <PARAMETER NAME="ERASE_TIME" TYPE="INTEGER" DEFAULT_VALUE="500000000">
      <FORCE_RANGE MIN="1600000" MAX="999999999" />
    </PARAMETER>
    <PARAMETER NAME="FIXED_DEVICE_ADD" TYPE="STRING" DEFAULT_VALUE="1010" USAGE="UNUSED">
      <FORCE_VALUE V="USED" WHEN="device_add_used" />
    </PARAMETER>
    <PARAMETER NAME="MEM_PROTECT" TYPE="STRING" USAGE="UNUSED" DEFAULT_VALUE_INDEX="0">
      <FORCE_RANGE TO="FULL|UPPER_HALF" WHEN="wp_used" />
    </PARAMETER>
    <PARAMETER NAME="MEMORY_SIZE" TYPE="STRING" DEFAULT_VALUE_INDEX="2">
      <FORCE_RANGE TO="1K|2K|4K|8K" />
    </PARAMETER>
    <PARAMETER NAME="OSC_FREQUENCY" TYPE="INTEGER" DEFAULT_VALUE_INDEX="0">
      <FORCE_RANGE TO="180000|300000" />
    </PARAMETER>
    <PARAMETER NAME="PAGE_WRITE_SIZE" TYPE="INTEGER" USAGE="UNUSED">
      <FORCE_RANGE TO="8|16|32" WHEN="page_write" />
    </PARAMETER>
    <PARAMETER NAME="PROGRAM_TIME" TYPE="INTEGER" DEFAULT_VALUE="1600000">
      <FORCE_RANGE MIN="1600000" MAX="100000000" />
    </PARAMETER>
    <PARAMETER NAME="WRITE_MODE" TYPE="STRING" DEFAULT_VALUE_INDEX="0">
      <FORCE_RANGE TO="SINGLE_BYTE|PAGE" />
    </PARAMETER>
    <PARAMETER NAME="MEM_ADD_ERASE0" TYPE="STRING" USAGE="UNUSED">
      <FORCE_VALUE V="USED" WHEN="mem_add_used" />
    </PARAMETER>
    <PARAMETER NAME="MEM_ADD_ERASE1" TYPE="STRING" USAGE="UNUSED">
      <FORCE_VALUE V="USED" WHEN="mem_add_used" />
    </PARAMETER>
  </PARAMETERS>
  <PORTS>
    <PORT NAME="a0" TYPE="INPUT" USAGE="UNUSED">
      <STATE V="USED" WHEN="a0_used" />
    </PORT>
    <PORT NAME="a1" TYPE="INPUT" USAGE="UNUSED">
      <STATE V="USED" WHEN="a1_used" />
    </PORT>
    <PORT NAME="a2" TYPE="INPUT" USAGE="UNUSED">
      <STATE V="USED" WHEN="a2_erase_used" />
    </PORT>
    <PORT NAME="global_reset" TYPE="INPUT" USAGE="UNUSED">
      <STATE V="USED" WHEN="global_reset_used" />
    </PORT>
    <PORT NAME="osc" TYPE="OUTPUT" USAGE="UNUSED">
      <STATE V="USED" WHEN="osc_used" />
    </PORT>
    <PORT NAME="oscena" TYPE="INPUT" USAGE="UNUSED" DEFAULT_VALUE="1">
      <STATE V="USED" WHEN="oscena_used" />
    </PORT>
    <PORT NAME="scl" TYPE="BIDIR" USAGE="USED" />
    <PORT NAME="sda" TYPE="BIDIR" USAGE="USED" />
    <PORT NAME="wp" TYPE="INPUT" USAGE="UNUSED">
      <STATE V="USED" WHEN="read_only_used AND wp" />
    </PORT>
  </PORTS>
</ROOT>
