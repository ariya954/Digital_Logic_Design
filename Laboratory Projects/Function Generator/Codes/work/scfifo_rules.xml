<?xml version="1.0"?>
<ROOT>
    <MACROS>
		<MACRO NAME="m_ecc_legal" DEFINITION="RAM_BLOCK_TYPE == M20K" />
    </MACROS>
	<PORTS>
		<PORT NAME="clock" IS_CLOCK_PORT="TRUE" CLOCK_PERIOD="10"/>
		<PORT NAME="aclr" TYPE="INPUT" HIGH_PROBABILITY="5" USAGE="VARIABLE" DEFAULT_VALUE="0" />
		<PORT NAME="sclr" TYPE="INPUT" HIGH_PROBABILITY="5" USAGE="VARIABLE" DEFAULT_VALUE="0" />
		<PORT NAME="wrreq" ASYNC="FALSE" INITIAL_VEC_STATE="0" >
			<FORCE_VALUE TO="0" WHEN="aclr == 1 || (full == 1 and OVERFLOW_CHECKING == OFF)" />
		</PORT>
		<PORT NAME="rdreq" ASYNC="FALSE" INITIAL_VEC_STATE="0" >
			<FORCE_VALUE TO="0" WHEN="aclr == 1 || (empty == 1 and UNDERFLOW_CHECKING == OFF)" />
		</PORT>
		<PORT NAME="empty" USAGE="VARIABLE" >
			<STATE V="USED" WHEN="UNDERFLOW_CHECKING == OFF" />
		</PORT>
		<PORT NAME="full" USAGE="VARIABLE" >
			<STATE V="USED" WHEN="OVERFLOW_CHECKING == OFF" />
		</PORT>
		<PORT NAME="usedw" USAGE="VARIABLE" />
        <PORT NAME="eccstatus" USAGE="VARIABLE" >
			<STATE V="USED" WHEN="ENABLE_ECC == TRUE" ELSE="UNUSED"/>
		</PORT>
	</PORTS>
	<PARAMETERS>
 		<PARAMETER NAME="ENABLE_ECC" >
			<FORCE_VALUE V="FALSE" WHEN="!m_ecc_legal" />
			<FORCE_RANGE TO="TRUE|FALSE" WHEN="m_ecc_legal" />
		</PARAMETER>
		<PARAMETER NAME="LPM_NUMWORDS" DEFAULT_VALUE="8" >
			<VALUE_RULE>
				(LPM_WIDTH gt 1)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="LPM_WIDTH" TYPE="INTEGER" DEFAULT_VALUE="8">
			<VALUE_RULE>
				(LPM_WIDTH gt 1)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="LPM_WIDTHU" TYPE="INTEGER" DEFAULT_VALUE="3">
			<FORCE_VALUE TO="ceil_log(LPM_NUMWORDS)" />
		</PARAMETER>
	</PARAMETERS>
</ROOT>
