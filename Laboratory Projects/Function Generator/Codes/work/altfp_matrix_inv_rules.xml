<?xml version="1.0"?>
<ROOT>
	<PARAMETERS>
		<PARAMETER NAME="WIDTH_EXP" VALUE="8-11" >
			<VALUE_RULE>
				(WIDTH_EXP == 8) or (WIDTH_EXP == 11)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="WIDTH_MAN" VALUE="23-52" >
			<VALUE_RULE>
				(((WIDTH_EXP == 8) and (WIDTH_MAN == 23)) or 
				((WIDTH_EXP == 11) and (WIDTH_MAN == 52)))
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="BLOCKS" VALUE="2-48" >
			<VALUE_RULE>
				((BLOCKS % 2) == 0)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="DIMENSION" VALUE="4-64" >
			IF DIMENSION != 6 AND DIMENSION != 4 THEN
			<VALUE_RULE>
				((DIMENSION % (2*BLOCKS)) == 0)
			</VALUE_RULE>
			<VALUE_RULE>
				(((DIMENSION*DIMENSION)/BLOCKS) lte 2048)
			</VALUE_RULE>
			<VALUE_RULE>
				(DIMENSION/(2*BLOCKS) gte 2)
			</VALUE_RULE>
			<VALUE_RULE>
				(DIMENSION/(2*BLOCKS) lte 6)
			</VALUE_RULE>
			END IF
		</PARAMETER>
	</PARAMETERS>
	<PorTS>
		<PorT NAME="reset" TYPE="INPUT" USAGE="VARIABLE" DEFAULT_VALUE="0" />
		<PorT NAME="enable" TYPE="INPUT" USAGE="VARIABLE" DEFAULT_VALUE="1" />
	</PorTS>
</ROOT>
