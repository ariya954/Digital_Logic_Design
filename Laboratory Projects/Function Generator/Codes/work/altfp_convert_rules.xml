<?xml version="1.0"?>
<ROOT>
	<PARAMETERS>
		<PARAMETER NAME="OPERATION" VALUE="INT2FLOAT|FLOAT2INT|FLOAT2FLOAT|FLOAT2FIXED|FIXED2FLOAT" DEFAULT_VALUE_INDEX="0" />
		<PARAMETER NAME="WIDTH_EXP_INPUT" DEFAULT_VALUE="8" >
			<FORCE_RANGE MIN="8" MAX="31" />
			<VALUE_RULE>
				(WIDTH_EXP_INPUT != 9) and (WIDTH_EXP_INPUT != 10)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="WIDTH_MAN_INPUT" DEFAULT_VALUE="23" >
			<FORCE_VALUE TO="23" WHEN="(WIDTH_EXP_INPUT == 8)" />
			<FORCE_RANGE MAX="63 - WIDTH_EXP_INPUT" MIN="31" WHEN="(WIDTH_EXP_INPUT gt 10)" />
			<VALUE_RULE>
				(WIDTH_EXP_INPUT lt WIDTH_MAN_INPUT)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="WIDTH_EXP_OUTPUT" DEFAULT_VALUE="8" >
			<FORCE_RANGE MIN="8" MAX="31" />
			<VALUE_RULE>
				(WIDTH_EXP_OUTPUT != 9) and (WIDTH_EXP_OUTPUT != 10)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="WIDTH_MAN_OUTPUT" DEFAULT_VALUE="23" >
			<FORCE_VALUE TO="23" WHEN="(WIDTH_EXP_OUTPUT == 8)" />
			<FORCE_RANGE MAX="63 - WIDTH_EXP_OUTPUT" MIN="31" WHEN="(WIDTH_EXP_OUTPUT gt 10)" />
			<VALUE_RULE>
				(WIDTH_EXP_OUTPUT lt WIDTH_MAN_OUTPUT)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="WIDTH_INT" >
			<FORCE_RANGE MIN="4" MAX="64" WHEN="(OPERATION==INT2FLOAT) || (OPERATION==FLOAT2INT)" />
			<FORCE_RANGE MIN="1" MAX="64" WHEN="(OPERATION==FIXED2FLOAT) || (OPERATION==FLOAT2FIXED)" />
		</PARAMETER>
		<PARAMETER NAME="WIDTH_DATA" >
			<FORCE_VALUE TO="WIDTH_EXP_INPUT + WIDTH_MAN_INPUT + 1" WHEN="(OPERATION==FLOAT2INT) || (OPERATION==FLOAT2FIXED) || (OPERATION==FLOAT2FLOAT)" />
      		<FORCE_VALUE TO="WIDTH_INT" WHEN="(OPERATION==INT2FLOAT)" />
      		<FORCE_RANGE MIN="4" MAX="64" WHEN="(OPERATION==FIXED2FLOAT)" />
	      		<VALUE_RULE>
	        		<IF>(OPERATION == FIXED2FLOAT)</IF>
					<THEN>(WIDTH_DATA gte WIDTH_INT)</THEN>
				</VALUE_RULE>
    	</PARAMETER>
		<PARAMETER NAME="WIDTH_RESULT" >
      		<FORCE_VALUE TO="WIDTH_EXP_OUTPUT + WIDTH_MAN_OUTPUT + 1" WHEN="(OPERATION == INT2FLOAT) || (OPERATION == FLOAT2FLOAT) || (OPERATION == FIXED2FLOAT)" />
      		<FORCE_VALUE TO="WIDTH_INT" WHEN="(OPERATION==FLOAT2INT)" />
			<FORCE_RANGE MIN="4" MAX="64" WHEN="(OPERATION == FLOAT2FIXED)" />
				<VALUE_RULE>
	        		<IF>(OPERATION == FLOAT2FIXED)</IF>
					<THEN>(WIDTH_RESULT gte WIDTH_INT)</THEN>
				</VALUE_RULE>
		</PARAMETER>
	</PARAMETERS>

	<PORTS>
		<PORT NAME="overflow" TYPE="OUTPUT" USAGE="VARIABLE" >
			<STATE V="UNUSED" WHEN="(OPERATION == INT2FLOAT) || (OPERATION == FIXED2FLOAT)" ELSE="USED" />
		</PORT>
		<PORT NAME="underflow" TYPE="OUTPUT" USAGE="VARIABLE" >
			<STATE V="UNUSED" WHEN="(OPERATION == INT2FLOAT) || (OPERATION == FIXED2FLOAT)" ELSE="USED" />
		</PORT>
		<PORT NAME="nan" TYPE="OUTPUT" USAGE="VARIABLE" >
			<STATE V="UNUSED" WHEN="(OPERATION == INT2FLOAT) || (OPERATION == FIXED2FLOAT)" ELSE="USED" />
		</PORT>
	</PORTS>

</ROOT>
